@using CollegeManagementSystem.Areas.Staff.Models
@using CollegeManagementSystem.Models
@model CollegeManagementSystem.Areas.Staff.Models.StaffTask

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Staff/Views/Shared/_StaffLayout.cshtml";
}

<h1>Edit</h1>

<h4>StaffTask</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TaskCode" />
            <div class="form-group">
                <label asp-for="TaskDescription" class="control-label"></label>
                <input asp-for="TaskDescription" class="form-control" />
                <span asp-validation-for="TaskDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TaskLocation" class="control-label"></label>
                <select asp-for="TaskLocation" class="form-control">
                    @foreach (var status in Enum.GetValues(typeof(TaskLocation)))
                    {
                        <option value="@status">@EnumHelper.GetDisplayName((Enum)status)</option>
                    }
                </select>
                <span asp-validation-for="TaskLocation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TaskStatus" class="control-label"></label>
                <select asp-for="TaskStatus" class="form-control">
                    @foreach (var status in Enum.GetValues(typeof(CollegeManagementSystem.Areas.Staff.Models.TaskStatus)))
                    {
                        <option value="@status">@EnumHelper.GetDisplayName((Enum)status)</option>
                    }
                </select>
                <span asp-validation-for="TaskStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
